<!DOCTYPE html>
<html lang="en" class="html_body_ziak">
<head>
    <%- include("../../shared/partials/head") %>
    <link rel="stylesheet" href="/css/style-ziak.css">
    <title>Exkurzie</title>
</head>
<body class="html_body_ziak">
    <!--BODY-->
    <div class="container-fluid">
        <div class="row flex-nowrap">
    
            <!-- Sidebar -->
            <%- include("../../shared/partials/sidebar_ziak") %>
    
            <div class="col odsadenie_od_sidebaru">

                <!--Header-->
                <%- include("../../shared/partials/header") %>
    
                <!-- Hlavný obsah -->
                <div style="padding: 20px;">
                    <div class="row justify-content-center d-flex">
                        <div class="col-md-10">
                            <h1 class="nadpis_exkurzie">Učebné materiály</h1>
                        </div>
                        <div class="col-md-10">
                            <div class="row justify-content-start d-flex" style="margin-top: 50px;">

                                <% for (category of categories) { %>
                                    <div class="col-md-3 position-relative text-center">
                                        <a href="/ziak/ucebne-materialy/<%= category.id_category %>">
                                            <img src="/obrazky/folder.png" alt="" class="img-fluid" width="60%">
                                            <div class="div_obrazok text-center" id="<%= category.id_category %>">
                                                <h1 class="text_obrazok text-center"><%= category.title_category %></h1>
                                            </div>
                                        </a>
                                    </div>
                                <% } %>

                            </div>
                        </div>
                        
                    </div>  
                </div>
            </div>
        </div>
    </div>
    <!--BODY-->

    <!--SCRIPTY-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>