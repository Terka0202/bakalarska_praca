<!DOCTYPE html>
<html lang="en" class="html_body_ziak">
<head>
    <%- include("../../shared/partials/head") %>
    <link rel="stylesheet" href="/css/style-ziak.css">
    <title>Exkurzie</title>
</head>
<body class="html_body_ziak">
    <!--BODY-->
    <div class="container-fluid">
        <div class="row flex-nowrap">
    
            <!-- Sidebar -->
            <%- include("../../shared/partials/sidebar_ziak") %>
    
            <div class="col">

                <!--Header-->
                <%- include("../../shared/partials/header") %>
    
                <!-- Hlavný obsah -->
                <div style="padding: 20px;">
                    <div class="row justify-content-center d-flex">
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-10">
                                    <h1 class="nadpis_exkurzie"><%= excursion.title_excursion %></h1>
                                </div>
                            </div>
                            <div class="row" style="margin-top: 20px;">
                                <div class="col-md-3">
                                    <span>
                                        Kedy: <%= new Date(excursion.date_excursion).toLocaleString('sk-SK', { 
                                        day: '2-digit', 
                                        month: '2-digit', 
                                        year: 'numeric' 
                                        }) %>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <span>Cena: <%= excursion.price %> €</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <span>
                                        Dokedy je potrebné sa prihlásiť:
                                        <%= new Date(excursion.log_in_date).toLocaleString('sk-SK', { 
                                        day: '2-digit', 
                                        month: '2-digit', 
                                        year: 'numeric' 
                                        }) %>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <span>Maximálny počet študentov: <%= excursion.max_number_of_students %></span>
                                </div>
                            </div>
                            <div class="row" style="margin-top: 20px;">
                                <div class="col-md-10">
                                    <h4>Popis exkurzie: </h4>
                                    <p class="text_pod_nadpisom">
                                        <%= excursion.description_excursion%>
                                    </p>
                                </div>
                            </div>

                            <div class="row" style="margin-top: 20px;">
                                <div class="col-md-3">
                                    <button>Prihlásiť sa</button>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--BODY-->

    <!--SCRIPTY-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>