<!DOCTYPE html>
<html lang="en" class="html_body_ziak">
<head>
    <%- include("../../shared/partials/head") %>
    <link rel="stylesheet" href="/css/style-ziak.css">
    <title>Exkurzie</title>
</head>
<body class="html_body_ziak">
    <!--BODY-->
    <div class="container-fluid">
        <div class="row flex-nowrap">
    
            <!-- Sidebar -->
            <%- include("../../shared/partials/sidebar_ziak") %>
    
            <div class="col odsadenie_od_sidebaru">

                <!--Header-->
                <%- include("../../shared/partials/header") %>
    
                <!-- Hlavný obsah -->
                <div style="padding: 20px;">
                    <div class="row justify-content-center d-flex">
                        <div class="col-md-9 col-9">
                            <h1 class="nadpis_exkurzie"><%= category_title %></h1>
                        </div>
                        <div class="col-md-1 col-3 justify-content-center align-items-center d-flex">
                            <a href="/ziak/ucebne-materialy">
                                <button type="button" class="button_spat" style="padding-left: 20px; padding-right: 20px;">Späť</button>
                            </a>
                        </div>
                    </div>  
                    <div class="row justify-content-center d-flex">
                        <div class="col-md-10">
                            <div class="row justify-content-start d-flex" style="margin-top: 50px;">
                                <div class="col-md-12 position-relative text-center">
                                    <table class="table">
                                        <thead>
                                          <tr>
                                            <th scope="col" class="col_nazvy">Názov súboru</th>
                                            <th scope="col" class="col_nazvy">Dátum pridania</th>
                                            <th scope="col" class="col_nazvy">Stiahnuť</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                            <% for (M of materials) { %>
                                                <tr>
                                                    <td class="td_nazvy"><%= M.title_material %></td>
                                                    <td class="td_nazvy"><%= new Date(M.date_added).toLocaleString('sk-SK', { 
                                                        day: '2-digit',
                                                        month: '2-digit',
                                                        year: 'numeric'
                                                        }) %></td>
                                                    <td><a href="<%= M.document_path %>" class="download" download><i class="fs-4 bi-download"></i></a></td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                      </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--BODY-->

    <!--SCRIPTY-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>