<!DOCTYPE html>
<html lang="en" class="html_body_ziak">
<head>
    <%- include("../../shared/partials/head") %>
    <link rel="stylesheet" href="/css/style-ziak.css">
    <title>Domáce úlohy</title>
</head>
<body class="html_body_ziak">
    <!--BODY-->
    <div class="container-fluid">
        <div class="row flex-nowrap">
    
            <!-- Sidebar -->
            <%- include("../../shared/partials/sidebar_ziak") %>
    
            <div class="col">

                <!--Header-->
                <%- include("../../shared/partials/header") %>
    
                <!-- Hlavný obsah -->
                <div style="padding: 20px;">
                    <div class="row justify-content-center d-flex">
                        <div class="col-md-10">
                            <h1 class="nadpis_domace_ulohy"><%= homework.title_homework %></h1>
                        </div>
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-8">
                                    <p class="p_text"><%= homework.description_homework %></p>
                                </div>
                            </div>
        
                           <form action="/ziak/domace-ulohy/<%= homework.id_homework %>" method="POST" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-8">
                                        <textarea id="text_homework" name="text_homework" rows="5" class="form-control form_input" placeholder="Správa" style="margin-bottom: 30px;" required></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        <label for="file_path" class="margin_input_upload">PDF súbor:</label>
                                        <input type="file" id="file_path" name="file_path" accept="application/pdf" class="form-control input_upload" style="margin-bottom: 50px;" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-9">
                                        <button type="submit" class="button_odoslat">Poslať</button>
                                    </div>
                                    <div class="col-md-5 col-3 justify-content-start d-flex" style="padding-left: 0px;">
                                        <a href="/ziak/domace-ulohy">
                                            <button type="button" class="button_spat" style="padding-left: 20px; padding-right: 20px;">Späť</button>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <!--BODY-->

    <!--SCRIPTY-->

</body>
</html>