<!DOCTYPE html>
<html lang="en" class="html_body_ziak">
<head>
    <%- include("../../shared/partials/head") %>
    <link rel="stylesheet" href="/css/style-ziak.css">
    <title>Domáce úlohy</title>
</head>
<body class="html_body_ziak">
    <!--BODY-->
    <div class="container-fluid">
        <div class="row flex-nowrap">
    
            <!-- Sidebar -->
            <%- include("../../shared/partials/sidebar_ziak") %>
    
            <div class="col">

                <!--Header-->
                <%- include("../../shared/partials/header") %>
    
                <!-- Hlavný obsah -->
                <div style="padding: 20px;">
                    <div class="row justify-content-center d-flex">
                        <div class="col-md-10">
                            <h1 style="margin-bottom: 50px; margin-top: 30px;">Domáce úlohy</h1>
                        </div>
                        <div class="col-md-10 text-center">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                      <tr>
                                        <th scope="col">Názov</th>
                                        <th scope="col">Dátum a čas zadania</th>
                                        <th scope="col">Dátum a čas odovzdania</th>
                                        <th scope="col">Otvoriť</th>
                                        <th scope="col">Odovzdané</th>
                                        <th scope="col">Vyhodnotenie</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <!--môžem mať dva rôzne cyklusy pre jednu šablónu, ale spoločnú premennú, ktorú vykreslujem v šablóne-->
                                        <% for(const H of homeworks) { %>      
                                            <%- include("../../shared/partials/student_items/homework-item", {newHomework: H}) %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>  
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--BODY-->

    <!--SCRIPTY-->

</body>
</html>